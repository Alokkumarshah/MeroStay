<% layout("/layouts/boilerplate") %>

<body>
  <script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
  </script>

  <div class="container mt-4">
    <!-- Title -->
    <div class="text-center mb-4">
      <h2 class="fw-bold"><%= listing.title %></h2>
      <p class="text-muted mb-0">
        <i class="fa-solid fa-location-dot text-danger"></i>
        <%= listing.location %>, <%= listing.country %>
      </p>
    </div>

    <!-- Listing Card -->
    <div class="row g-4">
      <div class="col-lg-7">
        <div class="card shadow-lg border-0 rounded-3 overflow-hidden">
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
          <div class="card-body p-4">
            <h5 class="text-secondary">Owned by 
              <span class="fw-bold text-dark">@<%= listing.owner.username %></span>
            </h5>
            <p class="mt-3"><%= listing.description %></p>
            <p class="h5 text-danger fw-bold">
              &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
        </div>

        <!-- Owner Controls -->
        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
          <div class="d-flex gap-3 mt-3">
            <a href="/listings/<%= listing._id %>/edit" 
               class="btn btn-outline-dark px-4">Edit</a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger px-4">Delete</button>
            </form>
          </div>
        <% } %>
      </div>

      <!-- Map Section -->
      <div class="col-lg-5">
        <div class="card shadow-sm border-0 rounded-3">
          <div class="card-body">
            <h5 class="fw-bold mb-3">Where you'll be</h5>
            <div id="map" class="rounded-3" style="height: 350px;"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="mt-5">
      <hr>
      <% if (currUser) { %>
        <h4 class="fw-bold mb-3">Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" 
              novalidate class="needs-validation">
          <div class="mb-3">
            <label for="rating" class="form-label fw-semibold">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label fw-semibold">Comments</label>
            <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comment for review</div>
          </div>
          <button class="btn btn-dark">Submit</button>
        </form>
      <% } %>

      <% if (listing.reviews.length > 0) { %>
        <hr class="my-4">
        <h4 class="fw-bold mb-4">All Reviews</h4>
        <div class="row">
          <% for (review of listing.reviews) { %>
            <div class="col-md-6 mb-4">
              <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                  <h6 class="fw-bold">@<%= review.author.username %></h6>
                  <p class="starability-result" data-rating="<%= review.rating %>"></p>
                  <p class="text-muted"><%= review.comment %></p>
                </div>
                <% if (currUser && currUser._id.equals(review.author._id)) { %>
                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="p-3">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>

  <script src="/js/map.js"></script>
</body>
