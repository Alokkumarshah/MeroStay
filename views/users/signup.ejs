<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
          <!-- Heading -->
          <h2 class="text-center mb-4 fw-bold text-danger">
            <i class="fa-solid fa-m me-2"></i> Sign Up on MeroStay
          </h2>

          <!-- Signup Form -->
          <form action="/signup" method="POST" class="needs-validation" novalidate>
            
            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label fw-semibold">Username</label>
              <input type="text" name="username" id="username" 
                     class="form-control rounded-3" placeholder="Enter your username" required>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a username</div>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label fw-semibold">Email</label>
              <input type="email" name="email" id="email" 
                     class="form-control rounded-3" placeholder="name@example.com" required>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid email</div>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label fw-semibold">Password</label>
              <input type="password" name="password" id="password" 
                     class="form-control rounded-3" placeholder="Enter a strong password" required>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a password</div>
            </div>

            <!-- Submit -->
            <button class="btn btn-danger w-100 rounded-3 fw-semibold">Sign Up</button>
          </form>

          <!-- Extra Links -->
          <p class="text-center mt-3 mb-0">
            Already have an account? 
            <a href="/login" class="text-decoration-none fw-semibold text-danger">Log In</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
