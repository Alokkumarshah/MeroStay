<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
          <!-- Heading -->
          <h2 class="text-center mb-4 fw-bold text-danger">
            <i class="fa-solid fa-m me-2"></i> Login to MeroStay
          </h2>

          <!-- Login Form -->
          <form action="/login" method="POST" class="needs-validation" novalidate>
            
            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label fw-semibold">Username</label>
              <input type="text" name="username" id="username" 
                     class="form-control rounded-3" placeholder="Enter your username" required>
              <div class="invalid-feedback">Please enter your username</div>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label fw-semibold">Password</label>
              <input type="password" name="password" id="password" 
                     class="form-control rounded-3" placeholder="Enter your password" required>
              <div class="invalid-feedback">Please enter your password</div>
            </div>

            <!-- Submit -->
            <button class="btn btn-danger w-100 rounded-3 fw-semibold">Log In</button>
          </form>

          <!-- Extra Links -->
          <p class="text-center mt-3 mb-0">
            Donâ€™t have an account? 
            <a href="/signup" class="text-decoration-none fw-semibold text-danger">Sign Up</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
